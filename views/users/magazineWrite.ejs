<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/ckeditor/ckeditor.js"></script>
    <script src="https://cdn.bootcss.com/sweetalert/1.1.3/sweetalert-dev.min.js"></script>
    <title>修改杂志信息</title>
    <style>
        .magazine-img {
            width: 140px;
            height: 197px;
            overflow: hidden;
            float: left;
        }
        .magazine-img img {
            width: 100%;
        }
        .name-box {
            float: left;
            margin-left: 100px;
            margin-top: 50px;
        }
        .choose-img-btn {
            margin: 0 10px 10px;

        }
        .choose-img-btn.active {
            background-color: #424283;
            color: #fff
        }
    </style>
</head>
<body>
<div class="page-header">
    <h1 class="text-center" ><a  href="/magazines" title="回到首页"  style="
            position: absolute;
            display: block;
            width: 30px;
            height: 30px;
            left: 20%;
        " > <span class="glyphicon glyphicon-home" ></span> </a>修改杂志信息</h1>
</div>
    <div id="magazine" style="display: none" > <%= magazine %> </div>
    <div class="container" >
        <div class="row" >
            <div class="col-md-10 col-md-offset-1 " >
                <div>

                    <% if(magazine) {  res=JSON.parse(magazine)  %>
                        <div class="magazine-img" style="margin-bottom: 50px"   >
                            <img src="<%=res[0].m_img%>"  id="img" />
                        </div>
                        <div class="name-box" > <h1><%=res[0].m_name%></h1> </div>
                        <div style="clear: both;" >
                            <form method="post" action="/magazines/info" enctype="multipart/form-data" id="myfrom" >
                                <div class="btn-box" >
                                    <button type="button" class="btn active choose-img-btn " id="choose-1" >上传本地图片</button>
                                    <button type="button" class="btn choose-img-btn " id="choose-2" >上传图片链接</button>
                                </div>
                                <div class="form-group" id="choose-1-res" >
                                    <label for="m_img">选择本地图片</label>
                                    <input type="file" name="m_img" id="m_img" >
                                </div>
                                <div class="form-group" id="choose-2-res" >
                                    <label for="m_img">上传图片链接</label>
                                    <input type="text" class="form-control" name="m_img_anchor" id="m_img_anchor" >
                                </div>
                                <a id="imgBtn" class="btn btn-xs btn-info " style="margin-bottom: 20px" >上传更换的封面</a>
                                <input  type="hidden" value="<%=res[0].m_id%>" id="m_id" />
                                <div class="form-group">
                                    <label for="m_name">杂志名</label>
                                    <input type="text" class="form-control" id="m_name" name="m_name" value="<%=res[0].m_name%>">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">简介</label>
                                    <!--<textarea class="form-control" rows="4" name="m_info" id="m_info" ><%=res[0].m_info%></textarea>-->
                                    <textarea id="m_info" name="m_info" cols="20" rows="2" class="ckeditor"><%=res[0].m_info%></textarea>
                                </div>
                                <button type="button" id="btn" class="btn btn-default">提交</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
<!--<script src="/javascripts/ckeditor.js" ></script>-->
<script>
    CKEDITOR.replace('m_info');
</script>
<script src="/javascripts/magazineWrite.js" ></script>
</body>
</html>